<div class="container">
    <div class='col-6' style="border-style: solid;">
        <div class="card" style="width: 18rem;">
            <img src="/images/companylogo.png" style="width:80px; margin: 5px;" class="card-img-top" alt="company logo">
            <div class="card-body">
                <div>
                    <%if(typeof message !='undefined'){%>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong><%=message%></strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        <%}%>
                            <form action="company/addproduct" id="formId" method="post" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="productname" class="form-label">Product Name</label>
                                    <input type="text" class="form-control" name='productname' id="productname" aria-describedby="productname">
                                </div>
                                <div class="mb-3">
                                    <select class="form-select" name='selectcategory' id='selectcategory' aria-label="select price" required>
																													<option selected>Select Category</option>
																													<%for(var i=0;i<list.length;i++){%>
																														<option value="<%=list[i].CategoryName%>">
																															<%=list[i].CategoryName%>
																														</option>
																														<%}%>
																												</select>
                                </div>

                                <div class="mb-3">
                                    <select class="form-select" name='selectpricerange' id='selectpricerange' aria-label="select price" required>
																													<option selected>Select Price Range</option>
																													<option value="0-1000">0-1,000</option>
																													<option value="1000-10000">1,000-10,000</option>
																													<option value="10000 & above">10,000 & above</option>
																												</select>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Make</label>
                                    <input type="text" class="form-control" id="make" name="make" aria-describedby="make" />
                                </div>
                                <div class="mb-3">
                                    <label for="productdescription" class="form-label">Product Description</label>
                                    <input type="text" class="form-control" id="productdescription" name="productdescription" aria-describedby="productdescription">
                                </div>
                                <div class="input-group mb-3">
                                    <input type="text" id="productprice" name="productprice" class="form-control" placeholder="Product Price">
                                    <span class="input-group-text"><i class="fas fa-rupee-sign"></i></span>
                                </div>
                                <div class=" input-group mb-3">
                                    <input type="number" class="form-control" id="productdiscount" onclick="finalprice()" name='productdiscount' placeholder="Product Discount">
                                    <span class="input-group-text"><i class="fas fa-percentage"></i></span>
                                </div>
                                <div class="input-group mb-3">
                                    <input type="number" id="productfinalprice" name="productfinalprice" class="form-control" placeholder="Product Price">
                                    <span class="input-group-text"><i class="fas fa-rupee-sign"></i></span>
                                </div>
                                <div class="mb-3">
                                    <label for="productimage" class="form-label">Product Image</label>
                                    <input type="file" class="form-control" id="productimage" name="productimage" aria-describedby="productimage" required>
                                </div>

                                <button type="submit" onsubmit="clearform()" class="btn btn-primary">Submit</button>
                            </form>
                </div>
            </div>
        </div>
    </div>
</div>